init python:
    w = None

    def scrollVpTo(vpid, x, pagelen):
        def a():
            global w
            w = renpy.get_widget(None, vpid)
            return w.xadjustment.change(pagelen * x)
        return a


screen students(title="Students", data=student_data):
    tag menu

    default num_pages = len(data)

    add "bg/school_front.jpg"

    key "hide_windows" action Return()
    key "game_menu" action Return()

    frame:
        padding (20, 20, 20, 20)
        ysize 600
        yalign 0.5

        style_prefix "web_pager"

        viewport id "pager":
            # scrollbars "horizontal"
        
            hbox:
                for page in data:
                    frame:
                        xsize 960
                        ysize 710
                        background page['image']

                        vbox:
                            pos (440, 80)
                            xsize 420

                            text title style_suffix "title"
                            text "\n" + page['name'] style_suffix "name"
                            text "\n" + page['desc'] style_suffix "desc"
                            text "\n" + page['post'] style_suffix "post"


        vpgrid:
            pos (420, 380)
            xsize 480
            cols 7
            spacing 5

            for i, page in enumerate(range(14)):
                imagebutton:
                    idle Crop((0,0,55,55), "web/pagination_students_%02d.png" % (i+1))
                    hover Crop((0,55,55,55), "web/pagination_students_%02d.png" % (i+1))
                    action scrollVpTo("pager", i, 960)
                    if i < 7:
                        xoffset 30


